<div class="container-fluid">
  <div class="row d-flex">
    <div class="col-md-2 d-flex flex-column align-items-center">
      <%= render 'public/users/user_card', user: @user %>
    </div>
    <div class="col-md-9 mx-auto">
      <h4><%= @user.nick_name %>さんをフォローしているユーザー</h4>
      <% if @followers.any? %>
        <div id="admin-users-list" class="row">
          <% @followers.each_slice(6) do |followers_slice| %>
            <% followers_slice.each do |user| %>
              <%= render 'user_card_follows', user: user %>
            <% end %>
          <% end %>
        </div>
        <div class="pagination">
          <%= paginate @followers %>
        </div>
      <% else %>
        <p>フォローしているユーザーはいません。</p>
      <% end %>
    </div>
  </div>
</div>