<div class="session-form-container align-content-center">
  <div class="row justify-content-center py-5" style="background-color: rgba(255, 255, 255, 0.6)";>
    <div class="col-md-8 col-lg-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="card p-4 shadow-sm">
          <div class="card-body">
            <h2 class="text-center mb-4">ログイン</h2>
            <div class="field">
              <%= f.label :email, class: 'form-label' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :password, class: 'form-label' %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <div class="actions text-center">
              <%= f.submit "ログイン", class: 'btn btn-success my-2 w-50' %>
            </div>
            <div class="actions text-center"><%= link_to '新規登録はこちら', new_user_registration_path, class: 'btn btn-primary my-2 w-50', data: {"turbolinks" => false} %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
