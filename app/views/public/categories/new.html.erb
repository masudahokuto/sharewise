<%= stylesheet_link_tag 'public/posts', media: 'all' %>
<%= stylesheet_link_tag 'public/categories', media: 'all' %>
<div class="container-fluid">
  <div class="row d-flex justify-content-center">
    <div class="col-sm-12 col-md-12 col-lg-9">
      <%= link_to  mypage_users_path, class: 'mypage-link', title: 'マイページ' do %>
        <i class="fa-solid fa-address-card"></i>
      <% end %>＞
　　　<!--HELPボタン-->
      <div class="d-flex justify-content-center flex-column align-items-center mb-2">
        <%= button_tag(id: 'help-button', class: 'btn btn-secondary mb-3', title: 'ヘルプ', data: { turbolinks: false }) do %>
          <i class="fa-solid fa-question"></i>
        <% end %>
        <div id="help-content" class="d-none">
          <img src="<%= asset_path('dictionary-help.png') %>" alt="ヘルプ画像" class="img-fluid" style="max-width:500px; height: auto; box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); border-radius: 15px; border: 2px solid #898989;">
        </div>
      </div>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-sm-12 col-md-12 col-lg-5">
      <div class="d-flex justify-content-center align-items-center w-100 mb-2">
        <%= form_with(model: @category, url: categories_path, method: :post, local: true, class: 'w-100') do |f| %>
          <div class="d-flex justify-content-center align-items-center mb-2">
            <%= link_to '一括登録ページへ', new_multi_create_path, class: "btn btn-warning w-50", data: {"turbolinks" => false}, style: "color: #ffffff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);" %>
          </div>
          <div class="row d-flex justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-8 mb-2">
              <%= f.text_field :category_name, class: "form-control mr-1", id: 'category_name', autofocus: true, placeholder: "もくじ１を入力(20文字まで登録できます)※必須" %>
            </div>
            <div class="col-sm-8 col-md-4 col-lg-4 mb-2 d-flex justify-content-center">
              <%= f.submit "項目を追加", class: "btn btn-primary w-100", title: 'フォームに入力してこのボタンで保存します(保存をすると保存順に切り替わります)' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-sm-12 col-md-12 col-lg-9">
      <span class="mokuji"><i class="fa-solid fa-book-open"></i></span>
      <%= link_to '五十音順', new_category_path(sort_order: 'alphabetical'),title:
'0(半角数字)
０(全角数字)
a(半角小文字)
ａ(全角小文字)
A(半角大文字)
Ａ(全角大文字)
ｱ(半角カナ)
ア(全角カナ)
ぁ(かな)
漢字
その他の順で並びます
' %>
      |
      <%= link_to '登録順', new_category_path(sort_order: 'created_at'), title: '保存順で並びます' %>
      <%= render 'category_save_oder', sorted_categories: @sorted_categories %>
    </div>
  </div>
</div>

<!--HELP表示-->
<%= javascript_pack_tag 'category_help', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'category_name_edit', 'data-turbolinks-track': 'reload' %>
