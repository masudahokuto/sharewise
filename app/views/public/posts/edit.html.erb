<div class="container-fluid">
  <div class="row d-flex justify-content-center">
    <div class="side-content col-sm-12 col-md-12 col-lg-2 d-flex flex-column align-items-center">
      <%= render 'public/users/user_card', user: @current_user %>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-10">
      <%= form_with model: @post, local: true, html: { id: 'post_form', enctype: 'multipart/form-data' } do |f| %>
        <div class="row d-flex justify-content-center mb-3">
          <div class="field col-12 col-md-8 col-lg-8">
            <div class="d-flex justify-content-between mb-1">
              <div class="mt-3">投稿内容を編集してください</div>
              <%= f.submit '編集完了', class: 'btn btn-primary ml-auto', style: 'width: 20%', title: "このボタンで保存します" %>
            </div>
            <%= f.text_area :body, sanitize: true, class: 'post-text-area', id: 'body', placeholder: "内容を入力してください(5000文字まで登録できます)" %>
          </div>
          <div class="col-12 col-md-4 col-lg-4 mt-4">
            <div class="text-left mb-1">
              <button id="add_image_button" type="button" class="image-add-btn btn-secondary" title="画像を追加出来ます">画像を追加する</button>
              ※画像は3枚まで登録できます
            </div>
            <div class="post-image-field">
              <div class="file-field_0 mb-3">
                <!-- 画像を追加 -->
                <input name="post[images][]" type="file" class="post_image" aria-num="0" onchange="fileSelect(this);" multiple>
                <img id="preview_area_0">
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>